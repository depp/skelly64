{
  "editor.detectIndentation": false,
  "editor.insertSpaces" true,
  "editor.rulers": [80],
  "editor.tabSize": 4,
  "[starlark]": {
    "editor.formatOnSave": true
  },
  "[c]": {
    "editor.formatOnSave": true
  },
  "[mips]": {
    "editor.tabSize": 8,
    "editor.insertSpaces": false
  },
  "[json]": {
    "editor.tabSize": 2,
  },
  "C_Cpp.default.includePath": [
    "${workspaceFolder}",
    "${workspaceFolder}/bazel-bin",
    "${workspaceFolder}/sdk/ultra/include",
    "/usr/include/freetype2"
  ],
  "C_Cpp.default.defines": ["_LANGUAGE_C"],
  "files.associations": {
    "*.h": "c",
    "*.s": "mips"
  },
  "files.exclude": {
    "bazel-*": true
  },
  "go.formatTool": "goimports"
}
