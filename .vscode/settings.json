{
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.rulers": [80],
  "editor.tabSize": 4,
  "[starlark]": {
    "editor.formatOnSave": true
  },
  "[c]": {
    "editor.formatOnSave": true
  },
  "[cpp]": {
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.tabSize": 2
  },
  "C_Cpp.default.includePath": [
    "${workspaceFolder}",
    "${workspaceFolder}/bazel-bin",
    "${workspaceFolder}/bazel-skelly64/external/fmt/include",
    "${workspaceFolder}/bazel-skelly64/external/freetype/include"
  ],
  "files.associations": {
    "*.h": "c"
  },
  "files.exclude": {
    "bazel-*": true
  },
  "go.formatTool": "goimports",
  "C_Cpp.default.cppStandard": "c++17",
  "C_Cpp.default.cStandard": "c17"
}
